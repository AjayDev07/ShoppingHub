@model ShoppingMVC.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "AddItemDescriptionIndex";
}

<h1>AddItemDescriptionIndex</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddItemDescription">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <br />
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create New Item Description" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}